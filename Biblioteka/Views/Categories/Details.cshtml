@model Biblioteka.Models.Category

@{
    ViewData["Title"] = "Szczegóły kategorii";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
        <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
}

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nazwa</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Powiązane książki</dt>
        <dd class="col-sm-10">
            @if (Model.BookCategories.Any())
            {
                    <ul>
                    @foreach (var bookCategory in Model.BookCategories)
                    {
                                <li>@bookCategory.Book.Title (@bookCategory.Book.Author)</li>
                    }
                    </ul>
            }
            else
            {
                    <span>Brak powiązanych książek</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn btn-warning">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</div>