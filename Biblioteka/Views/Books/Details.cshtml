@model Biblioteka.Models.Book

@{
    ViewData["Title"] = "Szczegóły książki";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>
        <dt class="col-sm-2">Rok</dt>
        <dd class="col-sm-10">@Model.YearPublished</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.BookID" class="btn btn-warning">Edytuj</a>
<a asp-action="Index" class="btn btn-secondary">Powrót</a>
