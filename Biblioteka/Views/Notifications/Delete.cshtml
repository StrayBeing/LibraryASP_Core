@model Biblioteka.Models.Notification

@{
    ViewData["Title"] = "Usuń powiadomienie";
}

<h2>@ViewData["Title"]</h2>

<h3>Czy na pewno chcesz usunąć to powiadomienie?</h3>

<div>
    <h4>Powiadomienie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Użytkownik</dt>
        <dd class="col-sm-10">@(Model.User != null ? $"{Model.User.FirstName} {Model.User.LastName}" : "Brak użytkownika")</dd>
        <dt class="col-sm-2">Wiadomość</dt>
        <dd class="col-sm-10">@Model.Message</dd>
        <dt class="col-sm-2">Data wysłania</dt>
        <dd class="col-sm-10">@Model.SentDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="NotificationID" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>